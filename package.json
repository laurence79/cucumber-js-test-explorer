{
  "name": "cucumber-js-test-runner",
  "displayName": "Cucumber JS Test Runner",
  "description": "Run cucumber-js tests in VS Code",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.94.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "workspaceContains:**/*.feature"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "title": "Cucumber JS Test Runner",
      "properties": {
        "cucumberJsTestRunner.virtualFolders": {
          "type": "array",
          "description": "Array of configurations",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string"
              },
              "cwd": {
                "type": "string",
                "description": "Working directory"
              },
              "configFile": {
                "type": "string",
                "description": "Path to the cucumber.js configuration file, relative to cwd"
              },
              "profiles": {
                "type": "array",
                "description": "cucumber.js configuration profiles to use",
                "items": {
                  "type": "string"
                },
                "default": []
              }
            },
            "required": [
              "name"
            ]
          }
        }
      }
    },
    "testing": {
      "testProviders": [
        {
          "id": "cucumberJsTestProvider",
          "label": "Cucumber"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.cjs",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.cjs --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.cjs --production",
    "check-types": "tsc --noEmit",
    "lint": "eslint src"
  },
  "dependencies": {
    "@cucumber/messages": "^26",
    "tree-kill": "^1",
    "ts-array-extensions": "^2.2.3"
  },
  "devDependencies": {
    "@cucumber/cucumber": "^11",
    "@cucumber/gherkin": "^30",
    "@eslint/js": "^9.11.1",
    "@types/mocha": "^10.0.9",
    "@types/node": "20.x",
    "@types/vscode": "^1.94.0",
    "@typescript-eslint/eslint-plugin": "^8.10.0",
    "@typescript-eslint/parser": "^8.7.0",
    "esbuild": "^0.24.0",
    "eslint": "^9.13.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.3",
    "eslint-plugin-import-x": "^4.4.0",
    "eslint-plugin-prettier": "^5.2.1",
    "globals": "^15.9.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.8.0"
  }
}
